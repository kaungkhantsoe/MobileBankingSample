<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_home_accounts_img"
            android:scaleType="fitXY"
            android:elevation="10dp"
            android:src="@mipmap/maccounts"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/fragment_home_beneficiary_img"
            android:scaleType="fitXY"
            android:elevation="10dp"
            android:src="@mipmap/mbeneficiary"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/fragment_home_help_img"
            android:scaleType="fitXY"
            android:elevation="10dp"
            android:src="@mipmap/mhelp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#187e03"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:text="I have"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/fragment_home_ammount_tv"
            android:text="Ammount"
            android:textColor="#187e03"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TableLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/fragment_home_own_transfer_img"
                android:scaleType="fitXY"
                android:elevation="10dp"
                android:src="@mipmap/mown_transfer"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:id="@+id/fragment_home_transfer_other_img"
                android:scaleType="fitXY"
                android:elevation="10dp"
                android:src="@mipmap/mtransfer_other"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>